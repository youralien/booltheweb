extends layout

block content
    //- script(src='/javascripts/ask.js')
    nav.navbar.navbar-default(role='navigation')
      div.navbar-header
        button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-collapse')
          span.icon-bar
          span.icon-bar
          span.icon-bar
      a.navbar-brand(href='/home') Bool
      div.navbar-collapse.collapse
        ul.nav.navbar-nav.navbar-left
          li
            a(href='/ask') New Question
          li
            a(href='/home') Let's Bool! 
        ul.nav.navbar-nav.navbar-right
          li
            a(href='#about')#username #{user.firstName}
          li
            a(href='/signout') Logout 

    form.form-horizontal.ask-form(method='post', action='/ask')
      fieldset
        legend Ask a question... Investigate a Market.. Understand others
        .form-group
          label.control-label(for='inputLarge') Ask
          input#inputLarge.form-control.input-lg(name='question', pattern=".{5,200}", required, type='text')
        .row
          .col-xs-6
            .form-group.has-success
              label.control-label(for='inputSuccess') option A
              input#inputSuccess.form-control(name='optionA', pattern=".{2,30}", required, type='text')
          .col-xs-6
            .form-group.has-error
              label.control-label(for='inputError') option B
              input#inputError.form-control(name='optionB', pattern=".{2,30}", required, type='text')
          .col-lg-10.col-lg-offset-2
            button.btn.btn-primary(type='submit') Submit
    a(href='/home', target='_blank')
      button.btn.btn-default Cancel



    