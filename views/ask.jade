extends layout

block content
  //- naviation bar
  nav.navbar.navbar-default(role='navigation')
    div.navbar-header
      button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-collapse')
        span.icon-bar
        span.icon-bar
        span.icon-bar
      a.navbar-brand(href='/home')
        img(src='http://i.picresize.com/images/2014/11/16/JgyN5.png')
    div.navbar-collapse.collapse
      ul.nav.navbar-nav.navbar-left
        li
          a(href='/ask') New Question
        li
          a(href='/home') Let's Bool! 
      ul.nav.navbar-nav.navbar-right
        li
          a(href='/me')#username #{user.firstName}
        li
          a(href='/signout') Logout 

  form.form-horizontal.ask-form(method='post', action='/ask')
    fieldset
      legend Ask a question... Investigate a Market.. Understand others
      .form-group
        label.control-label(for='inputLarge') Ask
        input#inputLarge.form-control.input-lg(name='question', autofocus, required, pattern=".{5,}", type='text')
      .row
        .col-xs-6
          .form-group.has-success
            label.control-label(for='inputSuccess') option A
            input#inputSuccess.form-control(name='optionA', required, pattern=".{2,}", type='text')
        .col-xs-6
          .form-group.has-error
            label.control-label(for='inputError') option B
            input#inputError.form-control(name='optionB', required, pattern=".{2,}", type='text')
        .col-lg-10.col-lg-offset-2
          button.btn.btn-primary(type='submit') Submit



    